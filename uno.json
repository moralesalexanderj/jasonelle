{
  "$jason": {
    "head": {
      "title": "Ingrese BÃºsqueda",
      "styles": {
        "bold": {
          "font": "HelveticaNeue-CondensedBold",
          "padding": "10",
          "size": "15"
        },
        "normal": {
          "font": "HelveticaNeue",
          "size": "12"
        }
      },
      "actions": {
        "$foreground": {
          "type": "$reload"
        },
        "send": {
          "type": "$util.alert",
          "options": {
            "title": "Message",
            "description": "{{$get.message}}"
          }
        }
      }
    },
    "body": {
      "header": {
        "menu": {
          "text": "Google",
          "href": {
            "url": "https:/www.google.com",
            "view": "web"
          },
          "size": 20
        }
      },
      "footer": {
        "input": {
          "left": {
            "image": "https://upload.wikimedia.org/wikipedia/commons/thumb/5/5c/AWS_Simple_Icons_AWS_Cloud.svg/1024px-AWS_Simple_Icons_AWS_Cloud.svg.png",
            "action": {
              "type": "$media.camera"
            }
          },
          "name": "message",
          "placeholder": "Palabra clave...",
          "right": {
            "text": "Buscar",
            "action": {
              "trigger": "send"
            }
          }
        }
      }
    }
  }
}
