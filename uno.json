{
  "$jason": {
    "head": {
      "styles": {
        "bold": {
          "font": "HelveticaNeue-CondensedBold",
          "padding": "10",
          "size": "15"
        },
        "normal": {
          "font": "HelveticaNeue",
          "size": "12"
        }
      },
      "actions": {
        "$foreground": {
          "type": "$reload"
        },
        "send": {
          "type": "$util.alert",
          "options": {
            "title": "Donalicious",
            "description": "Iniciando Búsqueda de {{$get.message}} en nuestro Catálogo."
          }
        }
      }
    },
    "body": {
      "header": {
        "title":"Menu",
        "menu": {
          "text": "Donalicious.com",
          "href": {
            "url": "https:/www.donalicious.com",
            "view": "web"
          },
          "size": 20
        }
      },
      "sections": {
        "items": [{
          "type": "label",
          "text": "Label only item"
        },
          {
            "type": "vertical",
            "components": [{
              "type": "image",
              "url": "https://jasonclient.org/img/john.png"
            },
              {
                "type": "label",
                "text": "John"
              },
              {
                "type": "label",
                "text": "Doe"
              }]
          },
          {
            "type": "vertical",
            "components": [{
              "type": "image",
              "url": "https://jasonclient.org/img/mary.png"
            },
              {
                "type": "label",
                "text": "Mary"
              },
              {
                "type": "label",
                "text": "Jane"
              }]
          }]
      },
      "footer": {
        "input": {
          "left": {
            "image": "https://xn--malamaa-9za.com.ve/wp-content/uploads/2020/02/mln-logo-principal-web.png",
            "action": {
              "type": "$media.camera"
            }
          },
          "name": "message",
          "placeholder": "Palabra clave...",
          "right": {
            "text": "Buscar",
            "action": {
              "trigger": "send"
            }
          }
        }
      }
    }
  }
}